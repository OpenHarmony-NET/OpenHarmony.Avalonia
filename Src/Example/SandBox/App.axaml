    </Application.Resources>
    <Application.Styles>
        <semi:SemiTheme Locale="zh-CN" />
        <semi-ursa:SemiTheme Locale="zh-CN" />
        <semi:SemiPopupAnimations />
        <StyleInclude Source="avares://Semi.Avalonia.TreeDataGrid/Index.axaml" />
    </Application.Styles>
