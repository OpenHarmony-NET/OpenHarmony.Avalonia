<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:openHarmony="clr-namespace:Avalonia.OpenHarmony;assembly=Avalonia.OpenHarmony"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SandBox.Views.MainView">
    <Grid
        Margin="50"
        RowDefinitions="Auto,*">
        <StackPanel
            Grid.Row="0">
            <TextBox />
            <TextBox InnerLeftContent="https://" InnerRightContent=".com" />
            <TextBox Classes="clearButton" Text="click to clear" />
            <TextBox Classes="revealPasswordButton" Text="123456" />
            <TextBox

                Classes="ClearButton RevealPasswordButton"
                InnerLeftContent="https://"
                InnerRightContent=".com"
                Text="123456" />
            <TextBox Classes="TextArea" Watermark="TextArea TextBox" />
            <TextBox

                Theme="{StaticResource LooklessTextBox}"
                Watermark="Lookless TextBox"
                InnerLeftContent="https://"
                InnerRightContent=".com" />
        </StackPanel>

        <ListBox
            Grid.Row="1"
            Name="ListBox"
            ItemsSource="{x:Static openHarmony:OHDebugHelper.Logs}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Theme="{DynamicResource CardBorder}">
                        <TextBlock Text="{Binding Message}"></TextBlock>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>